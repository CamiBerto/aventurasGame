import wollok.game.*
import nivel1.*
import personajes.*

program juego_aventura {
	game.title("Oh qu√© aventura objetosa")
	game.height(15)
	game.width(15)
	game.boardGround("fondoBlanco.png")
	nivelBloques.configurate()
	game.addVisual(personajeSimple)
	keyboard.right().onPressDo{ personajeSimple.moverALaDerecha() }
